{
   "manifest_version": 3,
   "name": "Hello World on Crunchyroll",
   "version": "1.0",
   "description": "Displays 'Hello World' on Crunchyroll.",
   "permissions": ["activeTab", "scripting"],
   "host_permissions": ["https://www.crunchyroll.com/*"],
   "content_scripts": [
     {
       "matches": ["https://www.crunchyroll.com/*"],
       "js": ["content.js"],
       "css": ["styles.css"]
     }
   ]
 }
 